root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{cs,jsx}]
indent_style = space
indent_size = 4

[*.{xml,resx,dnn,ascx,aspx,htm,html,cshtml}]
indent_style = tab

[*.resx]
end_of_line = crlf

[*.{yml,json,config,csproj,targets,props}]
indent_style = space
indent_size = 2
